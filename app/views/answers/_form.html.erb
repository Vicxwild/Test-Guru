<%= form_with model: [current_test, current_question, @answer] do |form| %>

  <%= render 'shared/errors', resourse: @answer %>

  <p>
    <%= form.label :body %>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <div>
    <%= form.submit %>
  </div>
<% end %>
