<div class="container">
  <div class="row justify-content-left">
    <h1><%= question_header(@question) %></h1>

    <div class="col-md-6">
      <%= form_with model: [:admin, current_test, @question] do |form| %>
        <%= render 'shared/errors', resourse: @question %>

        <div class="form-group">>
          <%= form.label :body, class: "control-label" %>
          <%= form.text_area :body, required: true, class: "form-control" %>
        </div>

        <div class="mt-3">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      <% end %>

      <br><%= link_to t('common.back'), admin_test_path(current_test), class: "btn btn-outline-primary mb-2" %>
    </div>
  </div>
</div>
