<div class="row justify-content-left mt-3">
  <div class="col col-md-4">
    <%= form_with model: [:admin, @test] do |form| %>
      <%= render 'shared/errors', resource: @test %>

      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, required: true, placeholder: "Write a title", class: 'form-control' %>
        </p>

        <p>
          <%= form.label :level %>
          <%= form.number_field :level, required: true, placeholder: "Write a level", class: 'form-control' %>
        </p>

        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
        </p>

        <div class="ms-3">
          <p class="fw-bolder"><%= t('.time_limit') %></p>

          <%= form.number_field :time_limit, class: 'form-control' %>
        </div>
      </div>

      <p>
        <%= form.submit class: 'btn btn-primary mt-3' %>
      </p>
    <% end %>
  </div>
</div>

<%= link_to t('common.back'), admin_tests_path, class: "btn btn-outline-primary mb-2" %>
