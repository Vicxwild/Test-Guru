<div class="row mt-3">
  <div class="col col-md-4">
    <%= form_with model: [:admin, current_test, current_question, @answer], class: "form-group" do |form| %>

      <%= render 'shared/errors', resourse: @answer %>

      <div class="form-group">
        <%= form.label :body, class: "control-label" %>
        <%= form.text_area :body, id: :answer_body, size: "70x5", class: "form-control" %>
      </div>

      <div class="form-group form-check">
        <%= form.label :correct, class: "form-check-label" %>
        <%= form.check_box :correct, id: :answer_correct, class: "form-check-input" %>
      </div>

      <div>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
