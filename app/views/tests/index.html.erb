<div class="container">
  <% if @tests.any? %>
    <h1 class="mt-2 mb-2 text-center"><%= t('.header') %></h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('common.level') %></th>
          <th><%= t('.category') %></th>
          <th><%= t('.creator') %></th>
          <th><%= t('.questions_count') %></th>
          <th><%= t('.timer') %></th>
          <th><%= t('.action') %></th>
        </tr>
      </thead>
      <%= render @tests %>
    </table>
  <% else %>
    <h1 class="mt-2 mb-2 text-center bg-danger text-white">
      <%= t(".no_available_tests") %>
    </h1>
  <% end %>
</div>
