<h1><%= question_header(current_question) %></h1>

<%= form_with model: [current_test, current_question] do |form| %>
  <%= render 'shared/errors', resourse: current_question %>

  <div>
    <%= form.label "Question:" %>
    <br>
    <%= form.text_area :body, required: true, placeholder: "Write a question" %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>

<br><%= link_to 'Back', test_questions_path(current_test) %>
